###############################################################################
# ContractOS — Environment Configuration
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Then start with:
#   docker compose up --build -d
###############################################################################

# ── Server ───────────────────────────────────────────────
PORT=8742

# ── LLM Provider (Anthropic / LiteLLM proxy) ────────────
# Required: Your Anthropic API key (or LiteLLM proxy key)
ANTHROPIC_API_KEY=sk-your-api-key-here

# Optional: Custom base URL for LiteLLM proxy or other Anthropic-compatible endpoint
# Leave empty to use Anthropic's default API endpoint
ANTHROPIC_BASE_URL=https://litellm-qc.zycus.net/

# Optional: Model name override
# Default: claude-sonnet-4-20250514
ANTHROPIC_MODEL=claude-sonnet-4-5-global
